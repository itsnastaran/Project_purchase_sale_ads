@model IEnumerable<Domain.SubCategory>

@{
    ViewData["Title"] = "زیردسته ها";
}

<h1 class="mt-4">زیردسته</h1>


<a asp-action="Create"><i style=" margin-right: 10px ; margin-top: 20px ;" class="iconadd fa-2x fa fa-plus-circle text-success"></i></a>

<div class="card">
    <div class="card-body">
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._SubCategory_Categories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._SubCategory_Categories.Title)
            </td>
            <td>
               <a asp-action="Edit" asp-route-id="@item.ID"><span class="badge bg-success"><i class=" fa fa-edit"></i></span></a>
                            <a asp-action="Details" asp-route-id="@item.ID"><span class="badge bg-primary"><i class="fa fa-eye"></i></span></a>
                            <a asp-action="Delete" asp-route-id="@item.ID"><span class="badge bg-danger"><i class="fa fa-trash"></i></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>